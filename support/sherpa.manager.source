		SaveActionResultToLog QPKG "$PACKAGE_NAME" upgrade failed "$result_code"
		result_code=1	# remap to 1
		MarkThisActionForkAsFailed
	fi

	QPKG.ClearAppCenterNotifier
	FuncFork:Exit $result_code

	}

