			QPKGs.ScStandalone:Show
		elif QPKGs.AClist.SCdependent:IsSet; then
			QPKGs.ScDependent:Show
		fi
	fi

	if [[ $opts_help_basic = true ]]; then
		Help.Basic:Show
		Help.Basic.Example:Show
	fi

	[[ $opts_help_ok = true ]] && Actions.Results:Show ok
	[[ $opts_help_skipped = true ]] && Actions.Results:Show skipped
	[[ $opts_help_failed = true ]] && Actions.Results:Show failed
	[[ $opts_help_showbackuploc = true ]] && Help.BackupLocation:Show
	[[ $self_display_zero_qpkgs = true ]] && ShowZeroQpkgs
	[[ $opts_help_suggestissue = true ]] && Help.Issue:Show

	DebugInfoMinSepr
	DebugScript finished "$($DATE_CMD)"
	DebugScript 'elapsed time' "$(FormatSecsToHoursMinutesSecs "$(($($DATE_CMD +%s)-SCRIPT_STARTSECONDS))")"
	DebugInfoMajSepr

	[[ ${self_debug_to_archive:=false} = true ]] && ArchiveActiveSessLog
	ResetActiveSessLog
	EraseThisLine
	DisplayLineSpaceIfNoneAlready   # final on-screen linespace

	return 0

	}

ParseArgs()
	{

	# basic argument syntax:
	#   scriptname [action] [groups] [options]

	Func:Entry
	DebugVar USER_ARGS_RAW

	local user_args_fixed=$(Lowercase "${USER_ARGS_RAW//,/ }")
	local -a user_args=(${user_args_fixed/--/})
	local arg=''
	local arg_identified=false
	local action=''
	local action_force=false
	local group=''
	local group_identified=false
	local package=''

	for arg in "${user_args[@]}"; do
		arg_identified=false

		# identify action: every time action changes, must clear group too
		case $arg in
		# these cases use only a single word to specify a single action
			backup|clean|reassign|rebuild|reinstall|restart|restore|start|stop)
				action=${arg}
				arg_identified=true
				group=''
				group_identified=false
				self_display_clean=false
				skip_qpkg_processing=false
				;;
			paste)
				action='paste'
				arg_identified=true
				group=''
				group_identified=false
				self_display_clean=false
				skip_qpkg_processing=true
				;;
		# all cases below can use multiple words or chars to specify a single action
			add|install)
				action=install
				arg_identified=true
				group=''
				group_identified=false
				self_display_clean=false
				skip_qpkg_processing=false
				;;
			c|check)
				action=check
				arg_identified=true
				group=''
				group_identified=false
				self_display_clean=false
				skip_qpkg_processing=false
				;;
			display|help|list|show|view)
				action=help
				arg_identified=true
				group=''
				group_identified=false
				self_display_clean=false
				skip_qpkg_processing=true
				;;
			rm|remove|uninstall)
				action=uninstall
				arg_identified=true
				group=''
				group_identified=false
				self_display_clean=false
				skip_qpkg_processing=false
				;;
			s|status|statuses)
				action=status
				arg_identified=true
				group=''
				group_identified=false
				self_display_clean=false
				skip_qpkg_processing=true
				;;
			update|upgrade)
				action=upgrade
				arg_identified=true
				group=''
				group_identified=false
				self_display_clean=false
				skip_qpkg_processing=false
		esac

		# identify group in two stages: stage 1 for when user didn't supply an action before group, stage 2 is after an action has been defined.

		# stage 1
		if [[ -z $action ]]; then
			case $arg in
				a|abs|action|actions|actions-all|alias|aliases|all-actions|b|backups|dependent|dependents|failed|groups|installable|installed|l|last|log|missing|not-installed|ok|option|options|p|package|packages|problems|r|repo|repos|results|skipped|standalone|standalones|started|stopped|tail|tips|updatable|updateable|upgradable|v|version|versions|whole)
					action=help
					arg_identified=true
					group=''
					group_identified=false
					skip_qpkg_processing=true
			esac

			DebugVar action
		fi

		# stage 2
		if [[ -n $action ]]; then
			case $arg in
			# these cases use only a single word or char to specify a single group
				backedup|installable|installed|missing|ok|problems|results|skipped|started|tail|tips)
					group=${arg}
					;;
				not-backedup)
					group=NTbackedup
					;;
				not-installed)
					group=NTinstalled
					;;
				failed)
					group=NTok
					;;
				stopped)
					group=NTstarted
					;;
			# all cases below can use multiple words or chars to specify a single group
				a|abs|alias|aliases)
					group=abs
					;;
				actions-all|all-actions)
					group=all-actions
					;;
				action|actions)
					group=actions
					;;
				all|entire|everything)
					group=all
					;;
				b|backups)
					group=backups
					;;
				dependent|dependents)
					group=dependent
					;;
				group|groups)
					group=groups
					;;
				l|last)
					group=last
					;;
				log|whole)
					group=log
					;;
				option|options)
					group=options
					;;
				p|package|packages)
					group=packages
					;;
				r|repo|repos)
					group=repos
					;;
				standalone|standalones)
					group=standalone
					;;
				updatable|updateable|upgradable)
					group=upgradable
					;;
				v|version|versions)
					group=versions
			esac

			if [[ -n $group ]]; then
				group_identified=true
				arg_identified=true
			fi
		fi

		# identify options
		case $arg in
			debug|dbug|verbose)
				arg_identified=true
				group_identified=true
				;;
			force)
				action_force=true
				arg_identified=true
		esac

		# identify package
		package=$(QPKG.MatchAbbrv "$arg")

		if [[ -n $package ]]; then
			group_identified=true
			arg_identified=true
		fi

		[[ $arg_identified = false ]] && ARGs-unknown:Add "$arg"

		case $action in
			backup)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|started|NTstarted|NTbackedup)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACbackup-to:Add "$package"
				esac
				;;
			check)
				opts_deps_check=true
				;;
			clean)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|started|NTstarted)
						QPKGs.ACclean.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACclean-to:Add "$package"
				esac
				;;
			help)
				case $group in
					abs)
						opts_help_abbreviations=true
						;;
					actions)
						opts_help_actions=true
						;;
					all-actions|all)
						opts_help_actions_all=true
						;;
					backedup|installed|started|NTstarted)
						QPKGs.AClist.IS${group}:Set
						self_display_clean=true
						;;
					backups)
						opts_help_backups=true
						;;
					dependent|installable|standalone|upgradable)
						QPKGs.AClist.SC${group}:Set
						self_display_clean=true
						;;
					failed)
						opts_help_failed=true
						;;
					groups)
						opts_help_groups=true
						;;
					last)
						opts_log_last_view=true
						self_display_clean=true
						;;
					log)
						opts_log_tail_view=true
						self_display_clean=true
						;;
					not-backedup)
						QPKGs.AClist.ISNTbackedup:Set
						self_display_clean=true
						;;
					not-installed)
						QPKGs.AClist.ISNTinstalled:Set
						self_display_clean=true
						;;
					ok)
						opts_help_ok=true
						;;
					options)
						opts_help_options=true
						;;
					packages)
						opts_help_packages=true
						;;
					problems)
						opts_help_problems=true
						;;
					reassign)
						opts_help_action_reassign=true
						;;
					repos)
						opts_help_repos=true
						;;
					results)
						opts_help_results=true
						;;
					skipped)
						opts_help_skipped=true
						;;
					status)
						opts_help_status=true
						;;
					tips)
						opts_help_tips=true
						;;
					versions)
						opts_vers_view=true
						self_display_clean=true
				esac

				skip_qpkg_processing=true
				;;
			install)
				case $group in
					all|dependent|installable|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|missing|started)
						QPKGs.ACinstall.IS${group}:Set
						group=''
						;;
					not-installed)
						QPKGs.ACinstall.ISNTinstalled:Set
						group=''
						;;
					*)
						QPKGs-ACinstall-to:Add "$package"
				esac
				;;
			paste)
				case $group in
					all|log|tail)
						opts_log_tail_paste=true
						action=''
						;;
					last)
						opts_log_last_paste=true
						action=''
				esac

				skip_qpkg_processing=true
				;;
			reassign)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|started|upgradable|NTstarted)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-AC${action}-to:Add "$package"
				esac
				;;
			rebuild)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACrebuild-to:Add "$package"
				esac
				;;
			reinstall)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|started|upgradable|NTstarted)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACreinstall-to:Add "$package"
				esac
				;;
			restart)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|started|upgradable|NTstarted)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACrestart-to:Add "$package"
				esac
				;;
			restore)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|started|upgradable|NTstarted)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACrestore-to:Add "$package"
				esac
				;;
			start)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|upgradable|NTstarted)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACstart-to:Add "$package"
				esac
				;;
			status)
				opts_help_status=true
				skip_qpkg_processing=true
				;;
			stop)
				case $group in
					all|dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|started|upgradable)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACstop-to:Add "$package"
				esac
				;;
			uninstall)
				case $group in
					all)   		# this group is dangerous, so make `force` a requirement
						if [[ $action_force = true ]]; then
							QPKGs.AC${action}.SC${group}:Set
							group=''
							action_force=false
						fi
						;;
					dependent|standalone)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						action_force=false
						;;
					installed)		# this group is dangerous, so make `force` a requirement
						if [[ $action_force = true ]]; then
							QPKGs.AC${action}.IS${group}:Set
							group=''
							action_force=false
						fi
						;;
					started|upgradable|NTstarted)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						action_force=false
						;;
					*)
						QPKGs-ACuninstall-to:Add "$package"
				esac
				;;
			upgrade)
				case $group in
					all|dependent|standalone|upgradable)
						QPKGs.AC${action}.SC${group}:Set
						group=''
						;;
					installed|started|NTstarted)
						QPKGs.AC${action}.IS${group}:Set
						group=''
						;;
					*)
						QPKGs-ACupgrade-to:Add "$package"
				esac
		esac
	done

	# when an action has been determined, but no group has been found, then show default information. This will usually be the help screen.
	if [[ -n $action && $group_identified = false ]]; then
		case $action in
			help|paste)
				opts_help_basic=true
		esac
	fi

	if ARGs-unknown:IsAny; then
		opts_help_basic=true
		skip_qpkg_processing=true
		self_display_clean=false
	fi

	Func:Exit

	}

