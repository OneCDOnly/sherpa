	{

	# Does this QPKG depend on any other QPKGs?

	# input:
	#   $1 = QPKG name

	# output:
	#   $? = 0 if true, 1 if false (first package found)

	local -i index=0

	for index in "${!QPKG_NAME[@]}"; do
		if [[ ${QPKG_NAME[$index]} = "${1:?package name null}" ]]; then
			if [[ -n ${QPKG_DEPENDS_ON[$index]} ]]; then
