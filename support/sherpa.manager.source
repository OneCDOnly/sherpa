			[[ $(QPKGs-AC${1}-sk:Count) -gt 0 || $(QPKGs-AC${1}-se:Count) -gt 0 ]] && sk_msg="$(ColourTextBrightOrange 'skipped:') $(QPKGs-AC${1}-sk:ListCSV) $(QPKGs-AC${1}-se:ListCSV)"
			[[ $(QPKGs-AC${1}-er:Count) -gt 0 ]] && er_msg="$(ColourTextBrightRed 'failed:') $(QPKGs-AC${1}-er:ListCSV)"
			;;
		IPK)
			;;
		PIP)
			:
	esac

	if [[ -z $sk_msg && -z $er_msg ]]; then
		return
	elif [[ -n $sk_msg && -z $er_msg ]]; then
		DisplayAsActionResultLastLine "$sk_msg"
	elif [[ -z $sk_msg && -n $er_msg ]]; then
		DisplayAsActionResultLastLine "$er_msg"
	else
		DisplayAsActionResultNtLastLine "$sk_msg"
		DisplayAsActionResultLastLine "$er_msg"
